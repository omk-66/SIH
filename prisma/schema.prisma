// schema.prisma

// Define the datasource for Prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL") // Your Neon PostgreSQL connection string
}

// Define the generator for Prisma Client
generator client {
  provider = "prisma-client-js"
}

// Define the database models

model FishCatchOccurrence {
  id         Int      @id @default(autoincrement())
  date       DateTime
  speciesId  Int
  latitude   Float
  longitude  Float
  depth      Float?
  dataSource String
  species    Species  @relation(fields: [speciesId], references: [id])
  location   Location @relation(fields: [locationId], references: [id])
  locationId Int

  @@index([date])
  @@index([speciesId])
  @@index([latitude, longitude])
}

model FishCatchAbundance {
  id          Int      @id @default(autoincrement())
  date        DateTime
  speciesId   Int
  latitude    Float
  longitude   Float
  catchWeight Float
  depth       Float?
  dataSource  String
  species     Species  @relation(fields: [speciesId], references: [id])
  location    Location @relation(fields: [locationId], references: [id])
  locationId  Int

  @@index([date])
  @@index([speciesId])
  @@index([latitude, longitude])
}

model Species {
  id          Int                   @id @default(autoincrement())
  name        String                @unique
  habitatInfo String?
  occurrences FishCatchOccurrence[]
  abundances  FishCatchAbundance[]
}

model Location {
  id          Int                   @id @default(autoincrement())
  latitude    Float
  longitude   Float
  description String?
  occurrences FishCatchOccurrence[]
  abundances  FishCatchAbundance[]
}
